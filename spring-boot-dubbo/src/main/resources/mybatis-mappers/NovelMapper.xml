<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.open.springqianbailu.dao.novel.NovelMapper">
    <resultMap id="BaseResultMap" type="com.open.springqianbailu.model.table.novel.Novel">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="href" jdbcType="VARCHAR" property="href"/>
        <result column="updateTime" jdbcType="VARCHAR" property="updateTime"/>
        <result column="submenuId" jdbcType="INTEGER" property="submenuId"/>
        <result column="pageNo" jdbcType="INTEGER" property="pageNo"/>
        <result column="createDate" jdbcType="VARCHAR" property="createDate"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, title,content, href,updateTime,submenuId,pageNo,createDate
    </sql>

    <resultMap id="collectionResultMap" type="com.open.springqianbailu.model.table.novel.Novel">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="href" jdbcType="VARCHAR" property="href"/>
        <result column="updateTime" jdbcType="VARCHAR" property="updateTime"/>
        <result column="submenuId" jdbcType="VARCHAR" property="submenuId"/>
        <result column="pageNo" jdbcType="INTEGER" property="pageNo"/>
        <result column="page_id" property="page_id"/>
        <result column="createDate" jdbcType="VARCHAR" property="createDate"/>
        <collection property="pageList" column="{novelId=id,pageId=page_id}"
                     select="com.open.springqianbailu.dao.novel.NovelPageMapper.selectById">
        </collection>

        <collection property="articleList" column="{novelId=id,pageId=page_id}"
                    select="com.open.springqianbailu.dao.novel.NovelArticleMapper.selectById">
        </collection>
    </resultMap>

    <select id="selectByHref" resultMap="collectionResultMap" parameterType="hashmap">
        select *,#{page} page_id
        from `novel`
        where  href = #{href,jdbcType=VARCHAR}
      </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.open.springqianbailu.model.table.novel.Novel">
    insert into novel (title, content,
      href, updateTime, submenuId,pageNo,createDate
      )
    values ( #{title,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR},
      #{href,jdbcType=VARCHAR}, #{updateTime,jdbcType=VARCHAR}, #{submenuId,jdbcType=INTEGER}, #{pageNo,jdbcType=INTEGER}
      , #{createDate,jdbcType=VARCHAR}
      )
  </insert>

    <delete id="dropTable">
        drop table if exists novel
    </delete>

    <delete id="deleteByPageNo"  parameterType="java.lang.Integer" >
        delete from novel
        where pageNo = #{pageNo,jdbcType=INTEGER}
    </delete>

    <insert id="createTable">
         CREATE TABLE novel (
          id int(11) NOT NULL AUTO_INCREMENT,
          title varchar(255) COLLATE utf8_bin NOT NULL COMMENT '标题',
          content varchar(255) COLLATE utf8_bin DEFAULT NULL COMMENT '摘要',
          href varchar(255) COLLATE utf8_bin DEFAULT NULL COMMENT '地址',
          updateTime varchar(255) COLLATE utf8_bin NOT NULL COMMENT '时间',
          submenuId int(11) DEFAULT NULL COMMENT '子菜单id',
          pageNo int(11) DEFAULT NULL COMMENT 'web页面页码',
          createDate varchar(255) COLLATE utf8_bin NOT NULL COMMENT '',
          PRIMARY KEY (id)
        ) ENGINE=InnoDB AUTO_INCREMENT=0 DEFAULT CHARSET=utf8 COLLATE=utf8_bin;
    </insert>

    <select id="selectByMenuId" resultMap="BaseResultMap" parameterType="hashmap" >
        select
        <include refid="Base_Column_List" />
        from novel
        where submenuId = #{submenuId} limit #{currentPosition},#{pageSize}
    </select>

    <select id="selectByDate" resultMap="BaseResultMap" parameterType="hashmap" >
        select
        <include refid="Base_Column_List" />
        from novel
        where submenuId = #{submenuId} and createDate = #{createDate}
    </select>

    <!--批量添加-->
    <insert id="insertBatch" parameterType="java.util.List"  useGeneratedKeys="true">
        <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
            SELECT
            LAST_INSERT_ID()
        </selectKey>
        insert into novel
        (title, content, href,updateTime,submenuId,pageNo,createDate)
        values
        <foreach collection="list" item="item" index="index"
                 separator=",">
            (
            #{item.title,jdbcType=VARCHAR},
            #{item.content,jdbcType=VARCHAR},
            #{item.href,jdbcType=VARCHAR},
            #{item.updateTime,jdbcType=VARCHAR},
            #{item.submenuId,jdbcType=INTEGER},
            #{item.pageNo,jdbcType=INTEGER},
            #{item.createDate,jdbcType=VARCHAR}
            )
        </foreach>
    </insert>

